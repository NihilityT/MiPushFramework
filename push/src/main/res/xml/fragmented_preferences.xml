<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/settings_clear">

        <Preference
            android:key="clear_history"
            android:summary="@string/settings_clear_history_summary"
            android:title="@string/settings_clear_history"
            />


        <Preference
            android:key="clear_log"
            android:summary="@string/settings_clear_log_summary"
            android:title="@string/settings_clear_log" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_experimental">

        <Preference
            android:key="mock_notification"
            android:summary="@string/settings_mock_notification_summary"
            android:title="@string/settings_mock_notification" />


        <SwitchPreference
            android:defaultValue="false"
            android:key="IceboxSupported"
            android:title="@string/settings_icebox_permission"
            android:summary="@string/settings_icebox_permission_summary" />
            
        <SwitchPreference
            android:defaultValue="false"
            android:key="ViaFreeform"
            android:title="@string/settings_via_freeform"
            android:summary="@string/settings_via_freeform_summary" />
            
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_options">

        <SwitchPreference
            android:defaultValue="false"
            android:key="NotificationOnRegister"
            android:title="@string/settings_notify_on_register" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="ShowConfigurationListOnLoaded"
            android:title="@string/settings_show_loaded_file_after_configurations_loaded" />

        <SwitchPreference
                android:defaultValue="false"
                android:key="DebugMode"
                android:title="@string/settings_debug_mode"
                android:summary="@string/settings_debug_mode_summary" />

        <SwitchPreference
                android:defaultValue="false"
                android:key="ShowAllEvents"
                android:title="@string/settings_show_all_events" />

        <SwitchPreference
                android:defaultValue="false"
                android:key="StartForegroundService"
                android:title="@string/settings_start_foreground_service"
                android:summary="@string/settings_start_foreground_service_summary" />

        <!-- TODO: entryValues's height is insufficient for 'en' locale. -->
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_title_access_mode_list_titles"
            android:entryValues="@array/pref_title_access_mode_list_values"
            android:key="AccessMode"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_access_mode"
            android:summary="@string/pref_summary_access_mode"
            />

    </PreferenceCategory>


</PreferenceScreen>